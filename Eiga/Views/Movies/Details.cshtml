
@model Eiga.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.MovieName</h2>
<ul>
    <li>Genre           :   @Model.Genre.GenreName</li>
    <li>Release Date    :   @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date Added      :   @Model.DateAdded.DayOfWeek</li>
    <li>Number in Stock :   @Model.NumberInStock </li>
</ul>

